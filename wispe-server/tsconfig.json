{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "ES6",
    "lib": ["es2022"],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["./src/typings/express.d.ts"],
    "noEmit": true
  },
  "include": ["src", "tests"],
  "exclude": ["tests"]
}
