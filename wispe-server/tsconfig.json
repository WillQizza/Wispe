{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "ES6",
    "lib": ["es2022"],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["./src/typings/express.d.ts"],
    "outDir": "./dist"
  },
  "include": ["src", "tests", "src/typings"],
  "exclude": ["tests"]
}
